<entities>
    <entity type="character" id="Flashman" source="Flashman">
        <geometry type="plane" w="48" h="48" />
        <collision>
            <rect w="12" h="24" />
        </collision>
        <traits>
            <trait name="contact-damage" points="4" />
            <trait name="health" max="28" />
            <trait name="jump" force="400" duration=".18" />
            <trait name="physics" area=".04" drag=".045" mass="105" />
            <trait name="solid" attack="bottom"/>
            <trait name="move" />
            <trait name="invincibility" duration=".5" />
            <trait name="weapon">
                <projectile-emit-offset x="18" y="3" />
            </trait>
        </traits>
    </entity>

    <animations w="48" h="48">
        <animation id="idle">
            <frame x="0" y="0"/>
        </animation>
        <animation id="fire">
            <frame x="48" y="0"/>
        </animation>
        <animation id="jump">
            <frame x="0" y="48"/>
        </animation>
        <animation id="taunt">
            <frame x="0" y="96"/>
        </animation>
        <animation id="run">
            <frame x="48" y="48" duration=".12" />
            <frame x="96" y="48" duration=".12" />
        </animation>
        <animation id="flash">
            <frame x="48" y="96" duration=".4" />
            <frame x="96" y="96" duration=".18" />
            <frame x="144" y="96" duration=".18" />
            <frame x="48" y="96" />
        </animation>
    </animations>

    <textures>
        <texture id="flashman" url="flashman.png" w="256" h="256" />
    </textures>
</entities>
