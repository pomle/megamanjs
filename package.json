{
  "name": "MegamanJS",
  "version": "0.2.0",
  "repository": "https://github.com/pomle/megamanjs",
  "license": "MIT",
  "scripts": {
    "build": "webpack --progress --colors",
    "lint": "eslint src/",
    "start": "mkdir -p ./dist && serve ./dist/ -p $PORT",
    "test": "yarn run test:unit && yarn run build && yarn run test:browser",
    "test:unit": "mocha './src/**/*-test.js'",
    "test:browser": "karma start .karma.conf --single-run --reporters mocha",
    "watch": "yarn run build -- --watch",
    "watch+start": "concurrently 'yarn run watch' 'yarn run start'",
    "heroku-postbuild": "yarn run build"
  },
  "dependencies": {
    "serve": "^6.0.0"
  },
  "devDependencies": {
    "@snakesilk/engine": ">=0.10.0",
    "@snakesilk/megaman-kit": ">=0.5.0",
    "@snakesilk/platform-kit": ">=0.1.3",
    "@snakesilk/testing": ">=0.2.0",
    "@snakesilk/xml-loader": ">=0.7.3",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-es2015": "^6.9.0",
    "clean-webpack-plugin": "^0.1.16",
    "codecov": "^1.0.1",
    "concurrently": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "eslint": "^3.3.1",
    "expect.js": "^0.3.1",
    "istanbul": "^0.4.2",
    "karma": "^1.2.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.1.0",
    "mocha": "^2.4.5",
    "sinon": "^1.17.3",
    "webpack": "^3.0.0",
    "xmldom": "^0.1.22"
  }
}
