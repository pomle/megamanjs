<objects>
    <object type="character" id="Metalman" source="Metalman">
        <geometry type="plane" w="48" h="48" />
        <collision>
            <rect x="0" y="0" w="12" h="24" />
        </collision>
        <traits>
            <trait name="contact-damage" points="4" />
            <trait name="health" max="28" />
            <trait name="jump" force="600" duration=".18" />
            <trait name="physics" area=".04" drag=".045" mass="105" />
            <trait name="solid" attack="bottom"/>
            <trait name="move" />
            <trait name="invincibility" duration=".5" />
            <trait name="weapon">
                <projectile-emit-offset x="18" y="3" />
            </trait>
        </traits>
    </object>

    <textures>
        <texture id="metalman" url="metalman.png" w="256" h="256" />
    </textures>

    <animations w="48" h="48">
        <animation id="idle">
            <frame x="0" y="0" />
        </animation>
        <animation id="jump">
            <frame x="0" y="48"/>
        </animation>
        <animation id="fire" group="run-fire">
            <frame x="48" y="0"/>
        </animation>
        <animation id="jump-fire" group="fire">
            <frame x="96" y="0" duration=".05" />
            <frame x="144" y="0" duration="5" />
        </animation>
        <animation id="run" group="run-fire">
            <frame x="96" y="48" duration=".12" />
            <frame x="48" y="48" duration=".12" />
            <frame x="96" y="48" duration=".12" />
            <frame x="144" y="48" duration=".12" />
        </animation>
    </animations>
</objects>
