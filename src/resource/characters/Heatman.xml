<entities>
    <entity type="character" id="Heatman" source="Heatman">
        <geometry type="plane" w="48" h="48" />
        <collision>
            <rect w="12" h="24" />
        </collision>
        <traits>
            <trait name="contact-damage" points="8" />
            <trait name="health" max="28" />
            <trait name="jump" force="300" duration=".18" />
            <trait name="physics" area=".04" drag=".045" mass="105" />
            <trait name="solid" attack="bottom" />
            <trait name="move" speed="300" acceleration="1000" />
            <trait name="invincibility" duration=".5" />
            <trait name="weapon">
                <projectile-emit-offset x="18" y="3" />
            </trait>
        </traits>
    </entity>

    <animations w="48" h="48">
        <animation id="idle">
            <frame x="0" y="0" />
        </animation>
        <animation id="fire">
            <frame x="48" y="48" duration=".06"/>
            <frame x="96" y="48" />
        </animation>
        <animation id="jump">
            <frame x="0" y="48" />
        </animation>
        <animation id="burn">
            <frame x="48" y="0" duration=".06"/>
            <frame x="96" y="0" duration=".06"/>
        </animation>
        <animation id="flame">
            <frame x="0" y=" 96" duration=".06"/>
            <frame x="48" y="96" duration=".06"/>
            <frame x="96" y="96" duration=".06"/>
        </animation>
        <animation id="toFlame">
            <frame x="96" y="144" duration=".03"/>
            <frame x="48" y="144" duration=".03"/>
            <frame x="0" y="144" />
        </animation>
        <animation id="fromFlame">
            <frame x="0" y="144" duration=".03"/>
            <frame x="48" y="144" duration=".03"/>
            <frame x="96" y="144" />
        </animation>
    </animations>

    <textures>
        <texture id="heatman" url="heatman.png" w="256" h="256" />
    </textures>
</entities>
